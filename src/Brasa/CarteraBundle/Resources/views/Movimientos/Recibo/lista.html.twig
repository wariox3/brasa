{% extends '::base.html.twig' %}
{% block title %}Cartera recibos lista - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Lista recibos</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div     class="form-group form-group-sm">
                    <label for="txtNit" class="col-sm-2 control-label">Cliente:</label>
                    <div class="col-sm-10">
                        <div class="row">
                          <div class="col-lg-2">
                            <div class="input-group">
                              {{ form_widget(form.TxtNit, { 'attr': {'class': 'form-control'} }) }}                              
                            </div>
                          </div>
                          <div class="col-lg-10">
                            <div class="input-group">     
                              {{ form_widget(form.TxtNombreCliente, { 'attr': {'class': 'form-control', 'readOnly': 'ReadOnly'} }) }}                              
                              <span class="input-group-btn">                                        
                                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_cartera_buscar_cliente', { 'campoCodigo': 'form_TxtNit', 'campoNombre': 'form_TxtNombreCliente' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                              </span>
                            </div>
                          </div>
                        </div>
                    </div>
                </div>                
                    
                <div class="form-group form-group-sm">  
                    <label for="form_TxtNumero" class="col-sm-2 control-label">Numero:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.TxtNumero, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label for="form_estadoAutorizado" class="col-sm-2 control-label">Impreso:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.estadoImpreso, { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div>     
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arRecibos, 'CÃ“DIGO', 'r.codigoReciboPk') }}</th>
                <th>NUMERO</th>
                <th>TIPO</th>
                <th>FECHA</th>
                <th>F.PAGO</th>
                <th>NIT</th>
                <th>CLIENTE</th>
                <th>ASESOR</th>
                <th>CUENTA</th>                                
                <th>TOTAL</th>
                <th>ANU</th>
                <th>AUT</th>
                <th>IMP</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            {% for arRecibos in arRecibos %}
            <tr>
                <td>{{ arRecibos.codigoReciboPk  }}</td>
                <td>{{ arRecibos.numero | default('0') }}</td>
                <td>{{ arRecibos.reciboTipoRel.nombre |default('')  }}</td>                
                <td>{{ arRecibos.fecha |date("Y/m/d")  }}</td>
                <td>{{ arRecibos.fechaPago |date("Y/m/d")  }}</td>
                <td>{{ arRecibos.clienteRel.nit |default('')  }}</td>
                <td>{{ arRecibos.clienteRel.nombreCorto |default('')  }}</td>
                <td>{{ arRecibos.asesorRel.nombre |default('')  }}</td>
                <td>{{ arRecibos.cuentaRel.nombre |default('')  }}</td>                
                <td style="text-align: right">{{ arRecibos.vrTotal | number_format(0, '.', ',') }}</td>
                <td>{% if arRecibos.estadoAnulado == 1 %}SI{% else %}NO{% endif %}</td>
                <td>{% if arRecibos.estadoAutorizado == 1 %}SI{% else %}NO{% endif %}</td>
                <td>{% if arRecibos.estadoImpreso == 1 %}SI{% else %}NO{% endif %}</td>
                {% if arRecibos.estadoAutorizado == 0 %}
                    <td style="text-align: center"><a href="{{ path('brs_cartera_movimiento_recibo_nuevo', {'codigoRecibo': arRecibos.codigoReciboPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>
                {% else %}
                    <td style="text-align: center"><a href="#" onClick="alert('No se puede editar el registro, ha sido autorizado')"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>
                {% endif %}
                <td style="text-align: center"><a href="{{ path('brs_cartera_movimiento_recibo_detalle', { 'codigoRecibo': arRecibos.codigoReciboPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arRecibos.codigoReciboPk }}" /></td>
            </tr>

            {% endfor %}
        </table>

        <!-- Botones Menu Items -->
        <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arRecibos.getTotalItemCount }}</span></div>
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arRecibos) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="{{ path('brs_cartera_movimiento_recibo_nuevo', {'codigoRecibo': 0}) }}">Nuevo</a>
            </div>
            <div class="btn-group">
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
