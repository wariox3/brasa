{% extends '::base_sin_menu.html.twig' %}
{% block title %}Cotizacion detalle nuevo - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo otro</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">               
            <div class="form-group form-group-sm">
                <label for="form_detalle" class="col-sm-3 control-label">Detalle:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.detalle, { 'attr': {'class': 'form-control', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}                        
                </div>                
            </div>             
            <div class="form-group form-group-sm">
                <label for="form_cantidad" class="col-sm-3 control-label">Cantidad:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.cantidad, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}