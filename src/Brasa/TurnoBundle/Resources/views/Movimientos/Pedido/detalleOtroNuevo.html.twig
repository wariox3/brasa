{% extends '::base_sin_menu.html.twig' %}
{% block title %}Otros conceptos nuevo - Soga App{% endblock %}
{% block content %}   
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo detalle otro concepto</h3>   
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body"> 
            <div class="form-group form-group-sm">
                <label  class="col-sm-3 control-label">Puesto:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.puestoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                                                                                                        
        </div>
    </div>     
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CODIGO</th>
                <th>NOMBRE</th>                
                <th>CANTIDAD</th>
                <th>PRECIO</th>
                <th></th>
            </tr>
            {% for arConceptosServicio in arConceptosServicio %}
            <tr>
                <td>{{ arConceptosServicio.codigoConceptoServicioPk  }}</td>
                <td>{{ arConceptosServicio.nombre  }}</td>
                <td style="text-align: right"><input class="input-grid" type="text" name="TxtCantidad{{ arConceptosServicio.codigoConceptoServicioPk }}" value="0" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>                        
                <td style="text-align: right"><input class="input-grid" type="text" name="TxtPrecio{{ arConceptosServicio.codigoConceptoServicioPk }}" value="0" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>                                        
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arConceptosServicio.codigoConceptoServicioPk }}" /></td>
            </tr>

            {% endfor %}
        </table>    
                
    <div class="modal-footer">            
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}