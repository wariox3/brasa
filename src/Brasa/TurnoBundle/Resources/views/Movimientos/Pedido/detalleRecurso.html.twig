                            <td>{{ arPlantillaDetalle.dia31  }}</td>
                            <td>{{ arPlantillaDetalle.lunes  }}</td>
                            <td>{{ arPlantillaDetalle.martes  }}</td>
                            <td>{{ arPlantillaDetalle.miercoles  }}</td>
                            <td>{{ arPlantillaDetalle.jueves  }}</td>
                            <td>{{ arPlantillaDetalle.viernes  }}</td>
                            <td>{{ arPlantillaDetalle.sabado  }}</td>
                            <td>{{ arPlantillaDetalle.domingo  }}</td>
                            <td>{{ arPlantillaDetalle.domingoFestivo  }}</td>
                            <td>{{ arPlantillaDetalle.festivo  }}</td>                                        
                        </tr>
                    {% endfor %}
                </table>  
                <br />
                <h3>Recursos</h3>
                <table class="table table-striped table-bordered table-condensed">
                    <tr>
                        <th>COD</th>
                        <th>RECURSO</th>
                        <th>TIPO</th>
                        <th  style="background-color: #FA5858;">POSICION</th>
                        <th></th>
                    </tr>
                    {% for arPedidoDetalleRecursos in arPedidoDetalleRecursos %}
                        <tr>
                            <td>{{ arPedidoDetalleRecursos.codigoPedidoDetalleRecursoPk  }}<input type="hidden" name="LblCodigo[]" value="{{ arPedidoDetalleRecursos.codigoPedidoDetalleRecursoPk }}"></td>
                            <td>{{ arPedidoDetalleRecursos.recursoRel.nombreCorto | default('') }}</td>                     
                            <td>{{ arPedidoDetalleRecursos.recursoRel.recursoTipoRel.nombre | default('') }}</td>                     
                            <td  style="background-color: #FA5858; text-align: right"><input class="input-grid" type="text" name="TxtPosicion{{ arPedidoDetalleRecursos.codigoPedidoDetalleRecursoPk }}" value="{{ arPedidoDetalleRecursos.posicion  }}" size="3" style="width:30px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>                        
                            <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPedidoDetalleRecursos.codigoPedidoDetalleRecursoPk }}" /></td>
                        </tr>
                    {% endfor %}
                </table> 
                <div class="btn-toolbar" style="float: right">                              
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_tur_movimiento_pedido_detalle_recurso_nuevo', {'codigoPedidoDetalle': arPedidoDetalle.codigoPedidoDetallePk }) }}', 'AgregarNuevoDetalle', 600, 1200)">Nuevo</a>                        
                    </div>
                    <div class="btn-group">
                        {{ form_widget(form.BtnDetalleActualizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                    </div>        
                    <div class="btn-group">
                        {{ form_widget(form.BtnDetalleEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
                    </div>
                </div> 
            </div>
        </div>                    





        {{ form_rest(form) }}
        {{ form_end(form) }}
        <a  class="btn btn-default btn-sm" href="{{ path('brs_tur_movimiento_pedido_detalle', { 'codigoPedido': arPedidoDetalle.codigoPedidoFk }) }}">Volver</a>
    </div>
{% endblock %}
