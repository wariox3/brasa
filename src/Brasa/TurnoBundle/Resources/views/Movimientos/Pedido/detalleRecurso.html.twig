                        <th>VI</th>
                        <th>SA</th>
                        <th>DO</th>
                        <th>DF</th>
                        <th>FE</th>                
                    </tr>
                    {% for arPlantillaDetalle in arPlantillaDetalle %}
                        <tr>
                            <td>{{ arPlantillaDetalle.codigoPlantillaDetallePk  }}</td>                                                        
                            <td  style="background-color: #FA5858;">{{ arPlantillaDetalle.posicion  }}</td>    
                            <td>{{ arPlantillaDetalle.dia1  }}</td>
                            <td>{{ arPlantillaDetalle.dia2  }}</td>
                            <td>{{ arPlantillaDetalle.dia3  }}</td>
                            <td>{{ arPlantillaDetalle.dia4  }}</td>
                            <td>{{ arPlantillaDetalle.dia5  }}</td>
                            <td>{{ arPlantillaDetalle.dia6  }}</td>
                            <td>{{ arPlantillaDetalle.dia7  }}</td>
                            <td>{{ arPlantillaDetalle.dia8  }}</td>
                            <td>{{ arPlantillaDetalle.dia9  }}</td>
