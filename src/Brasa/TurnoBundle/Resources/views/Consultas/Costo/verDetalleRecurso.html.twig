{% extends '::base_sin_menu.html.twig' %}
{% block title %}Generar soporte pago - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Costo recurso (Detallado)</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}                      
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>NOMINA</th>
                <th>SEGURIDAD SOCIAL</th>
                <th>PRESTACIONES</th>
            </tr>            
            <tr>
                <td style="text-align: right">{{ arCostoRecurso.VrNomina | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecurso.VrAportesSociales | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecurso.VrPrestaciones | number_format(0, '.', ',') }}</td>
            </tr>            
        </table>       
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>PD</th>
                <th>PUESTO</th>
                <th>HDS</th>
                <th>HD</th>
                <th>HN</th>
                <th>HFD</th>
                <th>HFN</th>
                <th>HEOD</th>
                <th>HEON</th>
                <th>HEFD</th>
                <th>HEFN</th>
                <th>RD</th>
                <th>RFD</th>
                <th>RFN</th>
                <th>%PART</th>
                <th>NOM</th>
                <th>SSO</th>
                <th>PRE</th>
                <th>COSTO</th>
            </tr>
            {% for arCostoRecursoDetalle in arCostoRecursoDetalle %}
            <tr>
                <td>{{ arCostoRecursoDetalle.codigoPedidoDetalleFk }}</td>                               
                <td>{{ arCostoRecursoDetalle.puestoRel.nombre | default('')  }}</td>                               
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasDescanso | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasDiurnas | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasNocturnas | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasFestivasDiurnas | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasFestivasNocturnas | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasExtrasOrdinariasDiurnas | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasExtrasOrdinariasNocturnas | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasExtrasFestivasDiurnas | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasExtrasFestivasNocturnas | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasRecargoNocturno | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasRecargoFestivoDiurno | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasRecargoFestivoNocturno | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.participacion | number_format(1, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.costoNomina | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.costoSeguridadSocial | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.costoPrestaciones | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.costo | number_format(0, '.', ',') }}</td>
            </tr>

            {% endfor %}
        </table>
        
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>PD</th>
                <th>PUESTO</th>
                <th>HDS</th>
                <th>HD</th>
                <th>HN</th>
                <th>HFD</th>
                <th>HFN</th>
                <th>HEOD</th>
                <th>HEON</th>
                <th>HEFD</th>
                <th>HEFN</th>
                <th>RD</th>
                <th>RFD</th>
                <th>RFN</th>
            </tr>
            {% for arCostoRecursoDetalle in arCostoRecursoDetalle %}
            <tr>
                <td>{{ arCostoRecursoDetalle.codigoPedidoDetalleFk }}</td>                               
                <td>{{ arCostoRecursoDetalle.puestoRel.nombre | default('')  }}</td>                               
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasDescansoCosto | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasDiurnasCosto | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasNocturnasCosto | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasFestivasDiurnasCosto | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasFestivasNocturnasCosto | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasExtrasOrdinariasDiurnasCosto | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasExtrasOrdinariasNocturnasCosto | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasExtrasFestivasDiurnasCosto | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasExtrasFestivasNocturnasCosto | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasRecargoNocturnoCosto | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasRecargoFestivoDiurnoCosto | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCostoRecursoDetalle.horasRecargoFestivoNocturnoCosto | number_format(2, '.', ',') }}</td>
            </tr>

            {% endfor %}
        </table>        
        
        <div class="btn-group" style="float: left">                
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arCostoRecursoDetalle.getTotalItemCount }}</span></div>
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arCostoRecursoDetalle) }}
        </div>
        {{ form_rest(form) }}
    {{ form_end(form) }}
    

</div>
{% endblock %}
