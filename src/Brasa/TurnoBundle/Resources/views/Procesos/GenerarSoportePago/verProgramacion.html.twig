{% extends '::base_sin_menu.html.twig' %}
{% block title %}Ver programacion soporte pago - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Programacion</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}                      
