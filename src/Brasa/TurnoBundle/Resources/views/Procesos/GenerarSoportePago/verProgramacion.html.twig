                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arProgramacionAlterna.getTotalItemCount }}</span></div>
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arProgramacionAlterna) }}
        </div>       
        {{ form_rest(form) }}
    {{ form_end(form) }}
    

</div>
{% endblock %}
