                    <td>{{ arProgramacionAlterna.dia7  }}</td>
                    <td>{{ arProgramacionAlterna.dia8  }}</td>
                    <td>{{ arProgramacionAlterna.dia9  }}</td>
                    <td>{{ arProgramacionAlterna.dia10  }}</td>
                    <td>{{ arProgramacionAlterna.dia11  }}</td>
                    <td>{{ arProgramacionAlterna.dia12  }}</td>
                    <td>{{ arProgramacionAlterna.dia13  }}</td>
