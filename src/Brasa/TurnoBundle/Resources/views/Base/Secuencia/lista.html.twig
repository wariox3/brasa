                <td style="text-align: center"><a href="javascript:abrirVentana3('{{ path('brs_tur_base_secuencia_detalle_editar', { 'codigoSecuenciaDetalle': arSecuenciaDetalles.codigoSecuenciaDetallePk}) }}', 'AgregarContrato', 600, 900)"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20></a></td>                                    
