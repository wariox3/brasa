                <td>{{ arSecuenciaDetalles.dia31  }}</td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arSecuenciaDetalles.codigoSecuenciaDetallePk }}" /></td>
            </tr>
            
            {% endfor %}
        </table>

        <!-- Botones Menu Items -->
        <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arSecuenciaDetalles.getTotalItemCount }}</span></div>                        
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arSecuenciaDetalles) }}       
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">                                
                {{ form_widget(form.BtnDetalleNuevo, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                       
            </div>
            <div class="btn-group">                
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
