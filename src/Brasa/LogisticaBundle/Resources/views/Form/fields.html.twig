{% block form_row %}
{% spaceless %}
    <div class="form-group">
        {{ form_label(form, null, { 'attr': {'class': 'col-sm-2 control-label'} }) }}        
        <div class="col-sm-10">           
            {{ form_widget(form, { 'attr': {'class': 'form-control'} }) }}
        </div>            
        
        {{ form_errors(form) }}
    </div>
{% endspaceless %}
{% endblock form_row %}