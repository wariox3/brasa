{% extends '::base_sin_menu.html.twig' %}
{% block title %}Programacion de pago nuevo - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nueva programacion pago</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion</div>
        <div class="panel-body">                              
            <div class="form-group form-group-sm">
                <label for="form_centroCostoRel" class="col-sm-3 control-label">Grupo pago:</label>
                <div class="col-sm-9">
                        {{ form_widget(form.centroCostoRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div> 
            <div class="form-group form-group-sm">
                <label for="form_pagoTipoRel" class="col-sm-3 control-label">Tipo pago:</label>
                <div class="col-sm-9">
                        {{ form_widget(form.pagoTipoRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div> 
            <div class="form-group form-group-sm">
                <label for="form_fechaDesde" class="col-sm-3 control-label">Desde:</label>
                <div class="col-sm-9">
                        {{ form_widget(form.fechaDesde, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaHasta" class="col-sm-3 control-label">Hasta:</label>
                <div class="col-sm-9">
                        {{ form_widget(form.fechaHasta, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_fechaHastaReal" class="col-sm-3 control-label">Hasta periodo:</label>
                <div class="col-sm-9">
                        {{ form_widget(form.fechaHastaReal, { 'attr': {'class': 'form-control'} }) }}
                        <p style="font-size: 0.8em;">- Fecha hasta donde va realmente el periodo, por ejemplo cuando el mes tiene 31 dias</p> 
                </div>
            </div>                 
            <div class="form-group form-group-sm">
                <label for="form_dias" class="col-sm-3 control-label">Dias:</label>
                <div class="col-sm-9">
                        {{ form_widget(form.dias, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Mensaje pago:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.mensajePago, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                
        </div>
    </div>                   
    <div class="modal-footer">        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}            
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}