{% extends '::base_sin_menu.html.twig' %}
{% block title %}Programación de pago agregar empleado - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Agregar empleado a la programación de pago</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion empleado</div>
        <div class="panel-body">
            <div>                      
                <div class="form-group form-group-sm">
                    <label for="form_numeroIdentificacion" class="col-sm-2 control-label">Identificación:</label>
                    <div class="col-sm-10">
                            {{ form_widget(form.numeroIdentificacion, { 'attr': {'class': 'form-control', 'visible': 'false'} }) }}
                    </div>
                </div>                                
            </div>                                            
        </div>
    </div>                   
    <div class="modal-footer">        
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}            
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}