{% extends '::base.html.twig' %}
{% block title %}Adicionales al pago masivo - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<script>
    $('#myTab a').click(function(e) {
        e.preventDefault();
        $(this).tab('show');
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Generar pagos adicionales (Masivo-Detalle)</h3>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">Empleados</div>
      <div class="panel-body">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
            {{ form_errors(form) }}          
        
    <ul class="nav nav-tabs">
        <li class="active"><a href="#tiempo" data-toggle="tab">Tiempo</a></li>
        <li><a href="#valor" data-toggle="tab">Valor</a></li>
    </ul>
            
    <div class="tab-content">
        <div class="tab-pane active" id="tiempo">            
            <div id="tiempo" style="width: 100%"><br>
                <table class="table table-striped table-bordered table-condensed table-hover">
                    <tr>
                        <th>CÓDIGO</th>
                        <th>IDENTIFICACIÓN</th>
                        <th>NOMBRE</th>
                        <th>SALARIO</th>
                        <th><p data-toggle="tooltip" data-placement="top" title="Recargo nocturno festivo compensado">R.N.F.C</p></th>
                        <th><p data-toggle="tooltip" data-placement="top" title="Recargo nocturno festivo NO compensado">R.N.F.N.C</p></th>
                        <th><p data-toggle="tooltip" data-placement="top" title="Horas extras festivas diurnas">H.E.F.D</p></th>
                        <th><p data-toggle="tooltip" data-placement="top" title="Horas extras festivas nocturnas">H.E.F.N</p></th>
                        <th><p data-toggle="tooltip" data-placement="top" title="Horas extras ordinarias diurna">H.E.O.D</p></th>
                        <th><p data-toggle="tooltip" data-placement="top" title="Horas extras ordinarias nocturna">H.E.O.N</p></th>
                        <th><p data-toggle="tooltip" data-placement="top" title="Domingo compensado">D.C</p></th>
                        <th><p data-toggle="tooltip" data-placement="top" title="Domingo NO compensado">D.N.C</p></th>
                        <th><p data-toggle="tooltip" data-placement="top" title="Recargo nocturno">R.N</p></th>

                    </tr>
                    {% for arEmpleados in arEmpleados %}
                    <tr {% if arEmpleados.estadoActivo == 0 %}class="danger"{% endif %}>
                        <td>
                            <input type="hidden" name="LblCodigo[]" value="{{ arEmpleados.codigoEmpleadoPk }}">
                            <span class="badge">{{ arEmpleados.codigoEmpleadoPk }}</span>
                        </td>
                        <td>{{ arEmpleados.numeroIdentificacion}}</td>
                        <td>{{ arEmpleados.nombreCorto }}</td>
                        <td style="text-align: right">{{ arEmpleados.vrSalario | number_format(2, '.', ',') }}</td>
                        <td style="text-align: right"><input class="input-grid" type="text" name="TxtRNFC[]" value="0" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>
                        <td style="text-align: right"><input class="input-grid" type="text" name="TxtRNFNC[]" value="0" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>
                        <td style="text-align: right"><input class="input-grid" type="text" name="TxtHEFD[]" value="0" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>
                        <td style="text-align: right"><input class="input-grid" type="text" name="TxtHEFN[]" value="0" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>
                        <td style="text-align: right"><input class="input-grid" type="text" name="TxtHEOD[]" value="0" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>
                        <td style="text-align: right"><input class="input-grid" type="text" name="TxtHEON[]" value="0" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>
                        <td style="text-align: right"><input class="input-grid" type="text" name="TxtDC[]" value="0" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>
                        <td style="text-align: right"><input class="input-grid" type="text" name="TxtDNC[]" value="0" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>
                        <td style="text-align: right"><input class="input-grid" type="text" name="TxtRN[]" value="0" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
        <div class="tab-pane" id="valor">
            <div id="valor" style="width: 100%"><br>
                <table class="table table-striped table-bordered table-condensed table-hover">
                    <tr>
                        <th>CÓDIGO</th>
                        <th>IDENTIFICACIÓN</th>
                        <th>NOMBRE</th>
                        <th>SALARIO</th>
                        <th>BONIFICACION</th>
                        <th><p data-toggle="tooltip" data-placement="top" title="Valor bonificacion">VALOR</p></th>                        
                        <th>COMISION</th>
                        <th><p data-toggle="tooltip" data-placement="top" title="Valor comision">VALOR</p></th>                        
                        <th>DESCUENTO</th>
                        <th><p data-toggle="tooltip" data-placement="top" title="Valor descuento">VALOR</p></th>                        
                    </tr>
                    
                    {% for arEmpleados in arEmpleados %}
                    <tr {% if arEmpleados.estadoActivo == 0 %}class="danger"{% endif %}>
                        <td>
                            <input type="hidden" name="LblCodigoValor[]" value="{{ arEmpleados.codigoEmpleadoPk }}">
                            <span class="badge">{{ arEmpleados.codigoEmpleadoPk }}</span>
                        </td>
                        <td>{{ arEmpleados.numeroIdentificacion}}</td>
                        <td>{{ arEmpleados.nombreCorto }}</td>
                        <td style="text-align: right">{{ arEmpleados.vrSalario | number_format(2, '.', ',') }}</td>
                        <td>
                            <select name="subtipoBonificacionRel[]"> 
                                {% for arPagoAdicionalSubtipoBonificacion in arPagoAdicionalSubtipoBonificacion %}
                                    <option value="{{ arPagoAdicionalSubtipoBonificacion.codigoPagoAdicionalSubtipoPk }}">{{ arPagoAdicionalSubtipoBonificacion.nombre }}</option>
                                {% endfor %}    
                           </select>                            
                        </td>                                               
                        <td style="text-align: right"><input class="input-grid" type="text" name="TxtValorBonificacion[]" value="0" size="20" style="text-align: right; width:100px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>                                                                        
                        <td>
                            <select name="subtipoComisionRel[]"> 
                                {% for arPagoAdicionalSubtipoComision in arPagoAdicionalSubtipoComision %}
                                    <option value="{{ arPagoAdicionalSubtipoComision.codigoPagoAdicionalSubtipoPk }}">{{ arPagoAdicionalSubtipoComision.nombre }}</option>
                                {% endfor %}    
                           </select>                            
                        </td>                                               
                        <td style="text-align: right"><input class="input-grid" type="text" name="TxtValorComision[]" value="0" size="20" style="text-align: right; width:100px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>                                                                        
                        <td>
                            <select name="subtipoDescuentoRel[]"> 
                                {% for arPagoAdicionalSubtipoDescuento in arPagoAdicionalSubtipoDescuento %}
                                    <option value="{{ arPagoAdicionalSubtipoDescuento.codigoPagoAdicionalSubtipoPk }}">{{ arPagoAdicionalSubtipoDescuento.nombre }}</option>
                                {% endfor %}    
                           </select>                            
                        </td>                                               
                        <td style="text-align: right"><input class="input-grid" type="text" name="TxtValorDescuento[]" value="0" size="20" style="text-align: right; width:100px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>                                                                                                
                    </tr>
                    {% endfor %}
                </table>
                
            </div>
        </div>
    </div>            
            
            <div class="btn-toolbar" style="float: right">
                <div class="btn-group">
                    {{ form_widget(form.BtnGenerar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
                </div>
            </div>
            {{ form_rest(form) }}
        {{ form_end(form) }}
      </div>
    </div>
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            <a class="btn btn-default" href="{{ path('brs_rhu_pagos_adicionales_generarmasivo_lista') }}" style="float:left">Volver</a>
        </div>
    </div>
    <br /><br />

</div>            
{% endblock %}
