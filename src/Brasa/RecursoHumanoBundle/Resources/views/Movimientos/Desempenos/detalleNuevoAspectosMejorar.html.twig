{% extends '::base_sin_menu.html.twig' %}
{% block title %}Gestión del desempeño detalle aspectos nuevo - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Agregar aspectos a mejorar del colaborador</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Aspectos a mejorar del colaborador:</label>
                <div class="col-sm-10">
                   {{ form_widget(form.aspectosMejorar, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control', 'rows':'8'} }) }}
                </div>
            </div>                 
        </div>
    </div>               
    <div class="modal-footer">
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}            
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}