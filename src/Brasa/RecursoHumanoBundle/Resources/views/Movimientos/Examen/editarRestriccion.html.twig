{% extends '::base_sin_menu.html.twig' %}
{% block title %}Examen nuevo restriccion - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Editar restricción medica</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_examenRevisionMedicaTipoRel" class="col-sm-3 control-label">Tipo de revisión:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.examenRevisionMedicaTipoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_dias" class="col-sm-3 control-label">Días:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.dias, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                               
        </div>
    </div>
        <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            <th colspan="5">DETALLE RESTRICCIÓN MEDICA</th>
        </tr>
        <tr>
            <th>CÓDIGO</th>
            <th>NOMBRE</th> 
            <th></th>
        </tr>
            {% for arExamenRestriccionMedicaDetalles in arExamenRestriccionMedicaDetalles %}
               <tr>
                <td>{{arExamenRestriccionMedicaDetalles.codigoExamenRestriccionMedicaTipoFk}}</td>
                <td>{{arExamenRestriccionMedicaDetalles.examenRestriccionMedicaTipoRel.nombre}}</td>
                <td align="center"><input type="checkbox" name="ChkSeleccionarDetalle[]" value="{{ arExamenRestriccionMedicaDetalles.codigoExamenRestriccionMedicaDetallePk }}" /></td>
            {% endfor %}
            </tr>            
    </table>    
                  
    <div class="modal-footer">            
        {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}    
    </div>
    <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            <th colspan="5">DETALLE NUEVO RESTRICCIÓN MEDICA</th>
        </tr>
        <tr>
            <th>CÓDIGO</th>
            <th>NOMBRE</th> 
            <th></th>
        </tr>
            {% for arExamenRestriccionMedicaTipos in arExamenRestriccionMedicaTipos %}
               <tr>
                <td>{{arExamenRestriccionMedicaTipos.codigoExamenRestriccionMedicaTipoPk}}</td>
                <td>{{arExamenRestriccionMedicaTipos.nombre}}</td>
                <td align="center"><input type="checkbox" name="ChkSeleccionarNuevo[]" value="{{ arExamenRestriccionMedicaTipos.codigoExamenRestriccionMedicaTipoPk }}" /></td>
            {% endfor %}
            </tr>            
    </table>
    <div class="modal-footer">            
        {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
</div>    
    {{ form_end(form) }}
{% endblock %}