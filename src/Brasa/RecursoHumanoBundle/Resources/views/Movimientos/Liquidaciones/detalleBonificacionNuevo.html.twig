{% extends '::base_sin_menu.html.twig' %}
{% block title %}Vacaciones detalle deducción nuevo - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nueva deducción</h3>
    <div class="panel panel-default">
        <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            
            <th>CÓDIGO</th>
            <th>NOMBRE</th>
            <th>VALOR</th>
            <th></th>
        </tr>
        
            {%for arPagoConceptos in arPagoConceptos %}
               <tr>
                <td>{{arPagoConceptos.codigoPagoConceptoPk}}</td>
                <td>{{arPagoConceptos.nombre}}</td>  
                <td style="text-align: right"><input class="input-grid" type="text" name="TxtValor{{ arPagoConceptos.codigoPagoConceptoPk }}" value="0" size="10" style="text-align: right; width:80px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>                                                
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPagoConceptos.codigoPagoConceptoPk }}" /></td>
            {%endfor%}
            </tr>            
    </table>    
    </div>               
    <div class="modal-footer">            
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}