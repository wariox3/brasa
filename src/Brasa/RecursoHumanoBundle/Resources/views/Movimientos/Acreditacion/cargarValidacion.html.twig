{% extends '::base_sin_menu.html.twig' %}
{% block title %}Cargar adicionales al pago - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Cargar validacion</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Cargar archivo</div>
        <div class="panel-body">
            <div>                      
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Numero:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.numero, { 'attr': {'class': 'form-control'} }) }}            
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Fecha:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fecha) }}            
                    </div>
                </div>                    
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Cargar:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.attachment, { 'attr': {'class': 'btn btn-sm btn-default'} }) }}            
                    </div>
                </div>                                
            </div>                                            
        </div>
    </div>                   
    <div class="modal-footer">        
            {{ form_widget(form.BtnCargar, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}            
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}