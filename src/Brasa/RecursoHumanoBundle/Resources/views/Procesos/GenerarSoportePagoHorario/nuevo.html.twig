{% extends '::base.html.twig' %}
{% block title %}Soporte pago nuevo - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo soporte pago</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">                
            <div class="form-group form-group-sm">
                <label for="form_centroCostoRel" class="col-sm-3 control-label">Grupo pago:</label>
                <div class="col-sm-9">
                        {{ form_widget(form.centroCostoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>            
            <div class="form-group form-group-sm">
                <label for="form_fechaDesde" class="col-sm-3 control-label">Desde:</label>
                <div class="col-sm-9">
                        {{ form_widget(form.fechaDesde) }}
                </div>
            </div> 
            <div class="form-group form-group-sm">
                <label for="form_fechaHasta" class="col-sm-3 control-label">Hasta:</label>
                <div class="col-sm-9">
                        {{ form_widget(form.fechaHasta) }}
                </div>
            </div>                
        </div>
    </div>               
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_proceso_soporte_pago_horario') }}">Cancelar</a>        
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}