{% extends '::base.html.twig' %}
{% block title %}Generar soporte pago horario - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>    
<div class="container">
    <div class="page-header">
        <h3>Soporte pago horario detalle</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arSoportesPagosHorariosDetalles, 'CÃ“DIGO', 'p.codigoSoportePagoHorarioDetallePk') }}</th>
                <th>DESDE</th>
                <th>HASTA</th>
                <th>IDENT</th>
                <th>NOMBRE</th>
                <th>DIAS</th>                
                <th>INC</th>
                <th>LIC</th>
                <th>VAC</th>
                <th>DES</th>                
                <th><p data-toggle="tooltip" data-placement="top" title="Horas">H</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas permisos">HP</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas novedad">HN</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas descanso">HDS</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas diurnas">HD</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas nocturnas">HN</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas festivas diurnas">HFD</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas festivas nocturnas">HFN</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas extras ordinarias diurnas">HEOD</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas extras ordinarias nocturnas">HEON</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas extras festivas diurnas">HEFD</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas extras festivas nocturnas">HEFN</p></th>
                <th></th>
                <th></th>
                <th></th>                
            </tr>
            {% for arSoportesPagosHorariosDetalles in arSoportesPagosHorariosDetalles %}
            <tr>                
                <td>{{ arSoportesPagosHorariosDetalles.codigoSoportePagoHorarioDetallePk  }}</td>
                <td>{{ arSoportesPagosHorariosDetalles.fechaDesde |date("Y/m/d")  }}</td>
                <td>{{ arSoportesPagosHorariosDetalles.fechaHasta |date("Y/m/d")  }}</td>   
                <td>{{ arSoportesPagosHorariosDetalles.empleadoRel.numeroIdentificacion  }}</td>   
                <td>{{ arSoportesPagosHorariosDetalles.empleadoRel.nombreCorto  }}</td>   
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.dias | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.incapacidad | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.licencia | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.vacacion | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.descanso | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horasPermiso | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horasNovedad | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horasDescanso | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horasNocturnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horasFestivasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horasFestivasNocturnas | number_format(0, '.', ',') }}</td>                
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horasExtrasOrdinariasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horasExtrasOrdinariasNocturnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horasExtrasFestivasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horasExtrasFestivasNocturnas | number_format(0, '.', ',') }}</td>                
                <td><a href="javascript:abrirVentana3('{{ path('brs_rhu_proceso_soporte_pago_horario_detalle_nuevo', {'codigoSoportePagoHorarioDetalle': arSoportesPagosHorariosDetalles.codigoSoportePagoHorarioDetallePk }) }}', 'Editar', 600, 900)"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Ver"></a></td>
                <td><a href="javascript:abrirVentana3('{{ path('brs_rhu_proceso_soporte_pago_horario_detalle_ver', {'codigoSoportePagoHorarioDetalle': arSoportesPagosHorariosDetalles.codigoSoportePagoHorarioDetallePk }) }}', 'VerDetalleSoportePago', 600, 900)"><img src="{{ asset('imagenes/bootstrap/glyphicons_090_table.png') }}" width=20 height=20 title="Ver"></a></td>                
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arSoportesPagosHorariosDetalles.codigoSoportePagoHorarioDetallePk }}" /></td>                                
            </tr>
            
            {% endfor %}
        </table>  
        <div class="btn-toolbar" style="float: left">
            <div class="btn-group">
                <a  class="btn btn-default btn-sm" href="{{ path('brs_rhu_proceso_soporte_pago_horario') }}">Volver</a>            
            </div>
            <div class="btn-group" style="float: left">
                    <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arSoportesPagosHorariosDetalles.getTotalItemCount }}</span></div>
            </div>
        </div>

        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arSoportesPagosHorariosDetalles) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
            </div>             
        </div>  
               
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
