            {% for arHorariosPeriodos in arHorariosPeriodos %}
            <tr>
                <td>{{ arHorariosPeriodos.codigoHorarioPeriodoPk  }}</td>
                <td>{{ arHorariosPeriodos.fechaPeriodo |date("Y/m/d")  }}</td>
