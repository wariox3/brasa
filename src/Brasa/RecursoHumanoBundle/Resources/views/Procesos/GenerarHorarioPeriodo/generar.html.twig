    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Generar periodo horario</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}

