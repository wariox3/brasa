{% extends '::base.html.twig' %}
{% block title %}Pagos detalle consulta - Soga App{% endblock %}
{% block content %}
<div class="container">
    <script type="text/javascript">
            $(document).ready(function() {
            $('.date').datepicker({ dateFormat: 'yy-mm-dd' ,dayNamesMin: [ "Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa" ],monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Deciembre" ], monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre" ]})  });
    </script>
    <div class="page-header">
        <h3>Pagos detalle</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
            {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">        
                <div class="form-group form-group-sm">  
                    <label for="form_pagoTipoRel" class="col-sm-2 control-label">Tipo:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.pagoTipoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                
                <div class="form-group form-group-sm">  
                    <label for="form_centroCostoRel" class="col-sm-2 control-label">Grupo pago:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.centroCostoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>  
                <div class="form-group form-group-sm">  
                    <label for="form_pagoConceptoRel" class="col-sm-2 control-label">Concepto:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.pagoConceptoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">  
                    <label for="form_TxtNumero" class="col-sm-2 control-label">Numero:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtNumero, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                                         
                <div class="form-group form-group-sm">  
                    <label for="form_TxtIdentificacion" class="col-sm-2 control-label">Identificacion:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtIdentificacion, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">  
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.fechaDesde, {'attr': {'maxlength' : 10} }) }} 
                    </div>
                </div>                     
                <div class="form-group form-group-sm">  
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.fechaHasta, {'attr': {'maxlength' : 10} }) }} 
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                                                    
            </div>
        </div> 
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>NUMERO</th>
                <th>CODIGO</th>
                <th>IDENTIFICACION</th>                
                <th>EMPLEADO</th>
                <th>CODIGO</th>
                <th>CONCEPTO</th>                               
                <th>C.COSTO</th>
                <th>DESDE</th>
                <th>HASTA</th>
                <th style="text-align: right">VR PAGO</th>
                <th>HORAS</th>
                <th>DIAS</th>
                <th>%</th>
                <th style="text-align: right">IBC</th>
                <th style="text-align: right">IBP</th>
                <th style="text-align: right">N.CREDITO</th>
            </tr>
            {% for arPagosDetalle in arPagosDetalle %}
            <tr>
                <td>{{ arPagosDetalle.pagoRel.numero }} </td>
                <td>{{ arPagosDetalle.pagoRel.empleadoRel.codigoEmpleadoPk }} </td>
                <td>{{ arPagosDetalle.pagoRel.empleadoRel.numeroIdentificacion  }}</td>
                <td>{{ arPagosDetalle.pagoRel.empleadoRel.nombreCorto  }}</td>
                <td>{{ arPagosDetalle.codigoPagoConceptoFk  }}</td>
                <td>{{ arPagosDetalle.pagoConceptoRel.nombre  }}</td>
                <td>{{ arPagosDetalle.pagoRel.centroCostoRel.nombre  }}</td>                
                <td>{{ arPagosDetalle.pagoRel.fechaDesde |date("Y/m/d")  }}</td>
                <td>{{ arPagosDetalle.pagoRel.fechaHasta |date("Y/m/d")  }}</td>
                <td style="text-align: right">{{ arPagosDetalle.vrPagoOperado | number_format(0, '.', ',') }}</td>
                <td>{{ arPagosDetalle.numeroHoras  }}</td> 
                <td>{{ arPagosDetalle.numeroDias  }}</td> 
                <td>{{ arPagosDetalle.porcentajeAplicado  }}</td> 
                <td style="text-align: right">{{ arPagosDetalle.vrIngresoBaseCotizacion | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arPagosDetalle.vrIngresoBasePrestacion | number_format(0, '.', ',') }}</td>
                <td>{{ arPagosDetalle.codigoCreditoFk()  }}</td>
            </tr>
            {% endfor %}
        </table>
        <div class="btn-toolbar" style="float: left">
            <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Pagos <span class="badge">{{ arPagosDetalle.getTotalItemCount }}</span></div>                        
            </div>
            <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arPagosDetalle) }}       
            </div>
        </div>                
        <div class="btn-toolbar" style="float: right">                 
            <div class="btn-group">
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnExcelResumen, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
            </div>
        </div>
        
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
