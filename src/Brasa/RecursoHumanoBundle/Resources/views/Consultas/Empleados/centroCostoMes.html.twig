{% extends '::base2.html.twig' %}
{% block title %}Consulta empleado centro costo - Soga App{% endblock %}
{% block content %}
<div class="container">
    <script type="text/javascript">
            $(document).ready(function() {
            $('.date').datepicker({ dateFormat: 'yy-mm-dd' ,dayNamesMin: [ "Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa" ],monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Deciembre" ], monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre" ]})  });
    </script>
    <div class="page-header">
        <h3>Consulta empleado centro costo mes</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
            {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">                                                   
                <div class="form-group form-group-sm">  
                    <label class="col-sm-2 control-label">AÃ±o:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtAnio, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">  
                    <label class="col-sm-2 control-label">Mes:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtMes, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                       
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                                                    
            </div>
        </div> 
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>ANIO</th>
                <th>MES</th>
                <th>CODIGO</th>                
                <th>CENTRO COSTO</th>
                <th>PUESTO</th>                                               
            </tr>
            {% for arEmpleadoCentroCosto in arEmpleadoCentroCosto %}
            <tr>
                <td>{{ arEmpleadoCentroCosto.anio }} </td>
                <td>{{ arEmpleadoCentroCosto.mes }} </td>                
                <td>{{ arEmpleadoCentroCosto.codigoEmpleadoFk  }}</td>
                <td>{{ arEmpleadoCentroCosto.codigoCentroCostoFk  }}</td>
                <td>{{ arEmpleadoCentroCosto.codigoPuestoFk  }}</td>  
            </tr>
            {% endfor %}
        </table>
        <div class="btn-toolbar" style="float: left">
            <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arEmpleadoCentroCosto.getTotalItemCount }}</span></div>                        
            </div>
            <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arEmpleadoCentroCosto) }}       
            </div>
        </div>                
        <div class="btn-toolbar" style="float: right">                 
            <div class="btn-group">
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
            </div>
        </div>
        
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
