            {%for arRequisitosCargos in arRequisitosCargos %}
               <tr>
                <td>{{arRequisitosCargos.codigoRequisitoCargoPk}}</td>
                <td>{{arRequisitosCargos.cargoRel.nombre}}</td>
                <td>{{arRequisitosCargos.requisitoConceptoRel.nombre}}</td>
