{% extends '::base2.html.twig' %}
{% block title %}Departamento empresa nuevo - Soga App{% endblock %} 
{% block content %}
<div class="container">    
    {{ form_start(formDepartamentoEmpresa, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(formDepartamentoEmpresa) }}
    <h3>Nuevo Departamento Empresa</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-10">
                        {{ form_widget(formDepartamentoEmpresa.nombre, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','onkeypress': 'txNombres();', 'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
        
</div>
</div>
    <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_departamento_empresa_listar') }}">Cancelar</a>
            {{ form_widget(formDepartamentoEmpresa.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>            
    {{ form_end(formDepartamentoEmpresa) }}
</div>    
{% endblock %}
