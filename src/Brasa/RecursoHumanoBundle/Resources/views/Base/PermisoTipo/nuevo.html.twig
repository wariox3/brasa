{% extends '::base.html.twig' %}
{% block title %}Permiso tipo nuevo - Soga App{% endblock %} 
{% block content %}
<div class="container">    
    {{ form_start(formPermisoTipo, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(formPermisoTipo) }}
    <h3>Nuevo tipo permiso</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Permiso:</label>
                <div class="col-sm-10">
                        {{ form_widget(formPermisoTipo.nombre, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()', 'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
        
</div>
</div>
    <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_permiso_tipo_lista') }}">Cancelar</a>
            {{ form_widget(formPermisoTipo.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>            
    {{ form_end(formPermisoTipo) }}
</div>    
{% endblock %}
