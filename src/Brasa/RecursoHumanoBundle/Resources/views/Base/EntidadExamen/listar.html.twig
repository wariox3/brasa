{% extends '::base2.html.twig' %}
{% block title %}Entidad exámen lista - Soga App{% endblock %}  
{% block content %}
    <div class="container">
    <div class="page-header">    
        <h3>Listado entidades para examenes medicos</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }} 
    <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            
            <th>CÓDIGO</th>
            <th>{{ knp_pagination_sortable(arEntidadesExamen, 'NOMBRE', 'nit') }}</th> 
            <th>NIT</th>
            <th>DIRECCIÓN</th>
            <th>TELÉFONO</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
            {%for arEntidadesExamen in arEntidadesExamen %}
               <tr>
                <td>{{arEntidadesExamen.codigoEntidadExamenPk}}</td>
                <td>{{arEntidadesExamen.nombre}}</td>
                <td>{{arEntidadesExamen.nit}}</td>
                <td>{{arEntidadesExamen.direccion}}</td>
                <td>{{arEntidadesExamen.telefono}}</td>
                <td><a href="{{ path('brs_rhu_base_entidadexamen_nuevo',{'codigoEntidadExamenPk': arEntidadesExamen.codigoEntidadExamenPk})}}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>
                <td><a href="{{ path('brs_rhu_base_entidadexamen_detalle', { 'codigoEntidadExamenPk': arEntidadesExamen.codigoEntidadExamenPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22 title="Detalles del registro"></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arEntidadesExamen.codigoEntidadExamenPk }}" /></td>
            {%endfor%}
            </tr>            
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">Entidades exámen <span class="badge">{{ arEntidadesExamen.getTotalItemCount }}</span></div>                        
    </div>
    <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arEntidadesExamen) }}       
    </div>
    <div class="btn-toolbar" style="float: right">              
        <div class="btn-group">
            {{ form_widget(form.BtnPdf, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
            {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
        </div>
        <div class='btn-group'>
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_entidadexamen_nuevo', {'codigoEntidadExamenPk': 0}) }}">Nuevo</a>
        </div>
        <div class="btn-group">
            {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}</td>                   
        </div>
        
    </div>     
    {{ form_rest(form) }}
    {{ form_end(form) }}
    </div>
{% endblock %}