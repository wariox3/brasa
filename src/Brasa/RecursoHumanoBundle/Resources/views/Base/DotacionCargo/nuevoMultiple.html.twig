{% extends '::base2.html.twig' %}
{% block title %}Dotacion cargo nuevo - Soga App{% endblock %} 
{% block content %}
<div class="container">    
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <h3>Nuevo dotacion del cargo</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Cargo:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.cargoRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>                        
        </div>
    </div>
                
    <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            <th>CÓDIGO</th>
            <th>ELEMENTO DOTACIÓN</th>
            <th>CANTIDAD</th>
        </tr>
        
            {%for arDotacionesElementos in arDotacionesElementos %}
               <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arDotacionesElementos.codigoDotacionElementoPk }}">{{ arDotacionesElementos.codigoDotacionElementoPk }}</td>
                <td>{{arDotacionesElementos.dotacion}}</td>
                <td style="text-align: right"><input class="input-grid" type="text" name="TxtCantidad[]" value="0" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>                
            {%endfor%}
            </tr>            
    </table>         
    <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_dotacion_cargo_lista') }}">Cancelar</a>
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>            
    {{ form_end(form) }}
</div>    
{% endblock %}
