{% extends '::base.html.twig' %}
{% block title %}Entidad caja compensación nuevo - Soga App{% endblock %} 
{% block content %}
<div class="container">    
    {{ form_start(formCaja, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(formCaja) }}
    <h3>Nueva entidad caja compensación</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-10">
                        {{ form_widget(formCaja.nombre, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()', 'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
        <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Nit:</label>
                <div class="col-sm-10">
                        {{ form_widget(formCaja.nit, { 'attr': {'onkeypress': 'ValidaSoloNumeros();', 'class': 'form-control'} }) }}
                </div>
            </div>
        <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Dirección:</label>
                <div class="col-sm-10">
                        {{ form_widget(formCaja.direccion, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>
        <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Teléfono:</label>
                <div class="col-sm-10">
                        {{ form_widget(formCaja.telefono, { 'attr': {'onkeypress': 'ValidaSoloNumeros();', 'class': 'form-control'} }) }}
                </div>
        </div>
        <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Código interface:</label>
                <div class="col-sm-10">
                        {{ form_widget(formCaja.codigoInterface, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
        </div>        
</div>
</div>
    <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_caja_listar') }}">Cancelar</a>
            {{ form_widget(formCaja.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>            
{{ form_end(formCaja) }}
</div>    
{% endblock %}
