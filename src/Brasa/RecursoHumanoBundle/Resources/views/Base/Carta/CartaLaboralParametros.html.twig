<script>
    $('#myModal').modal('toggle');
</script>        
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Parametros carta laboral</h4>
      </div>  
      {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
      <div class="modal-body">
            <div class="form-group form-group-sm">            
                <label for="form_salario" class="col-sm-6 control-label">Salario:</label>
                    <div class="col-sm-4"> 
                        {{ form_widget(form.salario) }} ({{ arContrato.VrSalario | number_format(0, '.', ',') }})
                    </div>
            </div>
            <div class="form-group form-group-sm">            
                <label for="form_promedioIbp" class="col-sm-6 control-label">Promedio ibp:</label>
                    <div class="col-sm-4"> 
                        {{ form_widget(form.promedioIbp) }} ({{ promedioIbp | number_format(0, '.', ',') }})
                    </div>
            </div>
            <div class="form-group form-group-sm">            
                <label for="form_promedioNoPrestacional" class="col-sm-6 control-label">Promedio no prestacional:</label>
                    <div class="col-sm-4"> 
                        {{ form_widget(form.promedioNoPrestacional) }} ({{ promedioNoPrestacional | number_format(0, '.', ',') }})
                    </div>
            </div>
            <div class="form-group form-group-sm">            
                <label for="form_salarioSugerido" class="col-sm-6 control-label">Salario (sugerido):</label>
                    <div class="col-sm-4"> 
                        {{ form_widget(form.salarioSugerido, { 'attr': {'class': 'form-control'} }) }}
                    </div>
            </div>
            <div class="form-group form-group-sm">            
                <label for="form_promedioIbpSugerido" class="col-sm-6 control-label">Promedio ibp (sugerido):</label>
                    <div class="col-sm-4"> 
                        {{ form_widget(form.promedioIbpSugerido, { 'attr': {'class': 'form-control'} }) }}
                    </div>
            </div>
            <div class="form-group form-group-sm">            
                <label for="form_promedioNoPrestacionalSugerido" class="col-sm-6 control-label">Promedio no prestacional (sugerido):</label>
                    <div class="col-sm-4"> 
                        {{ form_widget(form.promedioNoPrestacionalSugerido, { 'attr': {'class': 'form-control'} }) }}
                    </div>
            </div>        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>        
        {{ form_widget(form.BtnImprimir, { 'attr': {'class': 'btn btn-primary'} }) }}            
      </div>
      {{ form_end(form) }}
    </div>
  </div>
</div>