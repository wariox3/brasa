{% extends '::base_sin_menu.html.twig' %}
{% block title %}Permiso especial detalle nuevo - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo permiso especial</h3>
    <table class="table table-striped table-bordered table-condensed table-hover">
    <tr>            
        <th>MODULO</th>
        <th>TIPO</th>
        <th>NOMBRE</th>            
        <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
    </tr>       
        {%for arPermisosEspeciales in arPermisosEspeciales %}
           <tr>                
                <td>{{arPermisosEspeciales.modulo}}</td>
                <td>{{arPermisosEspeciales.tipo}}</td>
                <td>{{arPermisosEspeciales.nombre}}</td>                    
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPermisosEspeciales.codigoPermisoEspecialPk }}" /></td>
            </tr>
        {%endfor%}                        
    </table>                 
    <div class="modal-footer">      
            <a class="btn btn-default btn-sm" onclick="window.close()">Cancelar</a>        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}