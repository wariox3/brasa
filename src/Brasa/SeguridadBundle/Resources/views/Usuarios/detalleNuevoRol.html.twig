{% extends '::base_sin_menu.html.twig' %}
{% block title %}Permiso documento detalle nuevo - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo rol</h3>
        <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>            
            <th>ROL</th>
            <th></th>
        </tr>       
            {%for arRoles in arRoles %}
               <tr>                
                    <td>{{arRoles.nombre}}</td>                
                    <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arRoles.codigoRolPk }}" /></td>
                </tr>
            {%endfor%}                        
        </table>    
                  
    <div class="modal-footer">            
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>  
    {{ form_end(form) }}
</div>
{% endblock %}