{% extends '::base_sin_menu.html.twig' %}
{% block title %}Editar permiso para documento - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Editar permiso documento</h3>   
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">               
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Ingreso:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.ingreso) }}
                </div>
            </div>          
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Nuevo:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.nuevo) }}
                </div>
            </div>                                
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Editar:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.editar) }}
                </div>
            </div>  
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Eliminar:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.eliminar) }}
                </div>
            </div>                              
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Autorizar:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.autorizar) }}
                </div>
            </div>                               
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Desautorizar:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.desautorizar) }}
                </div>
            </div>                                
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Aprobar:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.aprobar) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Anular:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.anular) }}
                </div>
            </div> 
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Imprimir:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.imprimir) }}
                </div>
            </div>     
        </div>
    </div>                  
    <div class="modal-footer">            
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>  
    {{ form_end(form) }}
</div>
{% endblock %}