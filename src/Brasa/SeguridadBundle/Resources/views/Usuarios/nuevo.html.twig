{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}

    <h3>Nuevo usuario</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">           
            <div class="form-group form-group-sm">
                <label for="form_rolRel" class="col-sm-3 control-label">Tipo:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.rolRel, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>            
            <div class="form-group form-group-sm">
                <label for="form_nombreCorto" class="col-sm-3 control-label">Nombre:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.nombreCorto, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_email" class="col-sm-3 control-label">Correo:</label>
                <div class="col-sm-9">
                    {% if form_errors(form.email) %}
                        {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                        <div class="alert alert-danger" role="alert">{{ form_errors(form.email, { 'attr': {'autofocus': 'autofocus'} }) }}</div>
                    {% else %}
                        {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                    {% endif %}
                </div>
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_username" class="col-sm-3 control-label">Usuario:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_password" class="col-sm-3 control-label">Clave:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.password, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                
    </div>                
    <div class="modal-footer">     
            <a class="btn btn-default btn-sm" href="{{ path('brs_seg_admin_usuario_lista') }}">Cancelar</a>        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}            
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}