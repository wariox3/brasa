{% extends '::base.html.twig' %}
{% block title %}Configuración general - Soga App{% endblock %}
{% block content %}
    <div class="container">    

        <h3>Configuración general</h3>
        <ul class="nav nav-tabs">
            <li class="active"><a href="#general" data-toggle="tab">General</a></li>
            <li><a href="#notificaciones" data-toggle="tab">Notificaciones</a></li>
        </ul>    
        <div class="tab-content">
            <div class="tab-pane active" id="general">  
                <div id="general" style="width: 100%">
                <br />
                {{ form_start(formConfiguracionGeneral, { 'attr': {'class': 'form-horizontal'} }) }}
                {{ form_errors(formConfiguracionGeneral) }}
                <div class="panel panel-default">                    
                    <div class="panel-heading">Información general</div>
                    <div class="panel-body">
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Nombre empresa:</label>
                            <div class="col-sm-10">
                                {{ form_widget(formConfiguracionGeneral.nombreEmpresa, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus','class': 'form-control','autofocus':'autofocus'} }) }}
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Sigla:</label>
                            <div class="col-sm-10">
                                {{ form_widget(formConfiguracionGeneral.sigla, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus','class': 'form-control','autofocus':'autofocus'} }) }}
                            </div>
                        </div>    
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Nit:</label>
                            <div class="col-sm-10">
                                {{ form_widget(formConfiguracionGeneral.nitEmpresa, { 'attr': {'onKeypress': 'ValidaSoloNumeros();','class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Dv:</label>
                            <div class="col-sm-10">
                                {{ form_widget(formConfiguracionGeneral.digitoVerificacion, { 'attr': {'onKeypress': 'ValidaSoloNumeros();','class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Teléfono:</label>
                            <div class="col-sm-10">
                                {{ form_widget(formConfiguracionGeneral.telefonoEmpresa, { 'attr': {'onKeypress': 'ValidaSoloNumeros();','class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Ciudad:</label>
                            <div class="col-sm-10">
                                {{ form_widget(formConfiguracionGeneral.ciudadRel, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus','class': 'form-control','autofocus':'autofocus'} }) }}
                            </div>
                        </div>    
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Dirección:</label>
                            <div class="col-sm-10">
                                {{ form_widget(formConfiguracionGeneral.direccionEmpresa, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus','class': 'form-control','autofocus':'autofocus'} }) }}
                            </div>
                        </div>    
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Base retencion fuente:</label>
                            <div class="col-sm-10">
                                {{ form_widget(formConfiguracionGeneral.baseRetencionFuente, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Base retención cree:</label>
                            <div class="col-sm-10">
                                {{ form_widget(formConfiguracionGeneral.baseRetencionCree, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Porcentaje retención fuente:</label>
                            <div class="col-sm-10">
                                {{ form_widget(formConfiguracionGeneral.porcentajeRetencionFuente, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Porcentaje retención Cree:</label>
                            <div class="col-sm-10">
                                {{ form_widget(formConfiguracionGeneral.porcentajeRetencionCree, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Base retención iva ventas:</label>
                            <div class="col-sm-10">
                                {{ form_widget(formConfiguracionGeneral.baseRetencionIvaVentas, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>    
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Porcentaje retención inva ventas:</label>
                            <div class="col-sm-10">
                                {{ form_widget(formConfiguracionGeneral.porcentajeRetencionIvaVentas, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Fecha último cierre:</label>
                            <div class="col-sm-10">
                                {{ form_widget(formConfiguracionGeneral.fechaUltimoCierre, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Ruta temporal:</label>
                            <div class="col-sm-10">
                                {{ form_widget(formConfiguracionGeneral.rutaTemporal, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Ruta almacenamiento:</label>
                            <div class="col-sm-10">
                                {{ form_widget(formConfiguracionGeneral.rutaAlmacenamiento, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>                
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Ruta imagenes:</label>
                            <div class="col-sm-10">
                                {{ form_widget(formConfiguracionGeneral.rutaImagenes, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>    
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Ruta diretorio archivos:</label>
                            <div class="col-sm-10">
                                {{ form_widget(formConfiguracionGeneral.rutaDirectorio, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>                            
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Nit ventas mostrador:</label>
                            <div class="col-sm-10">
                                {{ form_widget(formConfiguracionGeneral.nitVentasMostrador, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>    
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Página web:</label>
                            <div class="col-sm-10">
                                {{ form_widget(formConfiguracionGeneral.paginaWeb, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus','class': 'form-control','autofocus':'autofocus'} }) }}
                            </div>
                        </div>    
                    </div>
                </div> 
                <div class="modal-footer">
                    <a class="btn btn-default btn-sm btn-danger" href="javascript:abrirVentana3('{{ path('brs_gen_borrar_bd') }}', 'BorrarBD', 500, 700)" >Borrar base datos</a>
                    {{ form_widget(formConfiguracionGeneral.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
                </div>    
                {{ form_end(formConfiguracionGeneral) }}
            </div>
            </div>
            <div class="tab-pane" id="notificaciones">
                <div id="notificaciones" style="width: 100%">                    
                    {{ form_start(formConfiguracionNotificaciones, { 'attr': {'class': 'form-horizontal'} }) }}
                    {{ form_errors(formConfiguracionNotificaciones) }}
                    <br />
                    <div class="panel panel-default">                    
                    <div class="panel-heading">Notificaciones</div>
                    <div class="panel-body">
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Correo inconsistencias turnos:</label>
                            <div class="col-sm-10">
                                {{ form_widget(formConfiguracionNotificaciones.correoTurnoInconsistencia, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                            </div>
                        </div>  
                    </div>
                </div>                    
                    
                    <div class="modal-footer">                        
                        {{ form_widget(formConfiguracionNotificaciones.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
                    </div>                    
                    {{ form_end(formConfiguracionNotificaciones) }}                    
                </div>
            </div>                
        </div>

    </div>
</div>    
{% endblock %}