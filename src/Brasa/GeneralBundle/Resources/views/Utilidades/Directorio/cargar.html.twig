{% extends '::base_sin_menu.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Cargar archivo</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                    <label for="form_descripcion" class="col-sm-2 control-label">Nombre:</label>
                    <div class="col-sm-10">
                            {{ form_widget(form.descripcion, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                    </div>
                </div>
            <div class="form-group form-group-sm">
                <label for="form_attachment" class="col-sm-2 control-label">Cargar:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.attachment, { 'attr': {'class': 'btn btn-sm btn-default'} }) }}            
                </div>
            </div> 
        </div>
    </div>                              
                                                       
    <blockquote>
      <p>Recuerde: El tamaño maximo por archivo a subir es de 6mb</p>
      <footer>Tipo <cite title="Source Title">archivos</cite></footer>
    </blockquote>    
                    
    <div class="modal-footer">        
            {{ form_widget(form.BtnCargar, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}            
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}
