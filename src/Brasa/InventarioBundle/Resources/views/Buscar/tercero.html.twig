{% extends '::base_sin_menu.html.twig' %}
{% block title %}Buscar tercero - Soga App{% endblock %}
{% block content %}
<div class="container">
    <script language="javascript">
        function selTercero(nit,nombre,campoNit,campoNombre)
        {
            opener.document.getElementById(campoNit).value = nit;
            opener.document.getElementById(campoNombre).value = nombre;
            opener.document.getElementById(campoNit).focus();
            self.close();
        }        
    </script>    
    <div class="page-header">
        <h3>Buscar tercero</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}                
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">

                <div class="form-group form-group-sm">  
                    <label for="form_TxtNombre" class="col-sm-3 control-label">Nombre:</label>
                    <div class="col-sm-9">                  
                        {{ form_widget(form.TxtNombre , { 'attr': {'class': 'form-control','autofocus':'autofocus', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}
                    </div>                   
                </div>  
                     
                <div class="form-group form-group-sm">  
                    <label for="form_TxtNit" class="col-sm-3 control-label">Nit:</label>
                    <div class="col-sm-9">                  
                        {{ form_widget(form.TxtNit, { 'attr': {'class': 'form-control'} }) }}
                    </div>      
                </div>   
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                                                    
            </div>
        </div>        
        <table  class="table table-striped table-bordered table-condensed table-hover">            
            <tr>
                <th>{{ knp_pagination_sortable(arTerceros, 'NIT', 't.codigoTerceroPk') }}</th>
                <th>NIT</th>
                <th>{{ knp_pagination_sortable(arTerceros, 'NOMBRE', 'T.nombreCorto') }}</th>                                                
                <th></th>
            </tr>
            {% for arTerceros in arTerceros %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arTerceros.codigoTerceroPk }}">{{ arTerceros.codigoTerceroPk }} </td>
                <td>{{ arTerceros.nit  }}</td>
                <td>{{ arTerceros.nombreCorto }}</td>                                                                
                <td style="text-align: center"><a href="javascript:selTercero('{{ arTerceros.nit }}','{{ arTerceros.nombreCorto }}','{{ campoNit }}','{{ campoNombre }}')" ><img src="{{ asset('imagenes/bootstrap/glyphicons_198_ok.png') }}" width=20 height=20></a></td>                                                
            </tr>
            {% endfor %} 
        </table>                                         
                  

        <!-- Botones Menu Items -->
        <div class="btn-toolbar">            
            <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arTerceros.getTotalItemCount }}</span></div>                        
            </div>     
            <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                    {{ knp_pagination_render(arTerceros) }}       
            </div>            
        </div>          
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}   
    
</div>
{% endblock %}
